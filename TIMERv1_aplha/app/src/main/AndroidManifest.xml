<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shristi.timerv1_alpha">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TIMERv1_alpha"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shristi.timerv1_alpha.StartActivity"
            android:label="TIMERv1_alpha"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shristi.timerv1_alpha.SetupDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shristi.timerv1_alpha.PreSlideSetup"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shristi.timerv1_alpha.TimerSetup"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shristi.timerv1_alpha.PresentationActivity"
            android:screenOrientation="portrait"></activity>


    </application>


    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"/>
</manifest>