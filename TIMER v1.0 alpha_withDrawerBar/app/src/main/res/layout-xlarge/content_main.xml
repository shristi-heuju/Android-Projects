<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shristi.timerv1_alpha_withDrawerBar.PresentationActivity"
    tools:showIn="@layout/activity_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLoadSlides"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:text="Load Slides"
                android:textSize="50sp" />


            <Button
                android:id="@+id/btnSetupSlides"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"
                android:text="Setup Slides"
                android:textSize="50sp" />


            <Button
                android:id="@+id/btnSetupTimer"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"
                android:text="Setup Timer"
                android:textSize="50sp" />


        </LinearLayout>


        <Button
            android:id="@+id/btnStart"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/button_bg"
            android:text="Start"
            android:textSize="120sp"
            android:visibility="visible" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2016 HITECH KATHMANDU"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
</RelativeLayout>
