<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f245e"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Timer set-up"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="For each slide (seconds)"
        android:textColor="#96928d"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:text="Seriously lagging"
            android:textColor="#000000"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etSeriouslyLagSlide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:gravity="center"
            android:hint="20s"
            android:padding="5dp"
            android:text="20"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Lagging"
            android:textColor="#000000"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etLagSlide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:gravity="center"
            android:hint="40s"
            android:padding="5dp"
            android:text="40"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="For overall presentation (slides)"
        android:textColor="#96928d"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Seriously lagging"
            android:textColor="#000000"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etSeriouslyLagOverall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:gravity="center"
            android:hint="2 slide"
            android:padding="5dp"
            android:text="2"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Lagging"
            android:textColor="#000000"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etLagOverall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#b1e9f7"
            android:gravity="center"
            android:hint="1 slide"
            android:padding="5dp"
            android:text="1"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:text="Back"
        android:textSize="20dp" />


</LinearLayout>